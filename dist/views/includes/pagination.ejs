
<nav aria-label="Page navigation example">
  <ul class="pagination pagination-lg justify-content-center">
    <% if (currentPage !== 1 && previousPage !== 1) { %>
    <a class="page-link" href="?page=1">1</a>
    <% } %>
    <% if (hasPreviousPage) { %>
    <a class="page-link" href="?page=<%= previousPage %>"><%= previousPage %></a>
    <% } %>
    <a class="page-link active" href="?page=<%= currentPage %>" ><%= currentPage %></a>
    <% if (hasNextPage) { %>
    <a class="page-link" href="?page=<%= nextPage %>"><%= nextPage %></a>
    <% } %>
    <% if (lastPage !== currentPage && nextPage !== lastPage) { %>
    <a class="page-link" href="?page=<%= lastPage %>"><%= lastPage %></a>
    <% } %>
    </section>
</nav>